<!DOCTYPE html>
<html>

<head>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>
  <nav class="navbar navbar-expand-md navbar-light fix-top border-bottom">
    <div class="container-xxl">
      <a class="navbar-brand">
        <span class="fw-bold text-success">
          Cyber Studio
        </span>
      </a>
      <a href="/create" id="btn_create_story" class="btn btn-success">Create Story</a>
    </div>
  </nav>

  <section>
    <div class="container">
      <div class="row g-3">
        <% if(stories){ %>
          <% stories.forEach(story=> { %>
            <div class="col-sm-12 col-6 col-lg-4">
            <div class="card h-100" id="card">
                <img src="/images/landmark01.jpeg" class="card-img-top" alt="...">
                <div class="card-body">
                  <h3 class="card-title"><%= story.title %><small class="text-muted">-<%= story.author %> - <%= story.date %> - </small><small id="storyId"><%= story.id %> </small></h3>
                  <p class="card-text"><%= story.content.slice(0,200) %></p>
                </div>
                <div class="card-footer bg-white border-0">
                  <a href="/story/<%= story.id %>" class="btn stretched-link"></a>
                  <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                </div>
            </div>
          </div>
            <% }) %>
              <% } %>
      </div>
    </div>
  </section>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>

   <script src="/javascripts/index.js"></script>
</body>

</html>