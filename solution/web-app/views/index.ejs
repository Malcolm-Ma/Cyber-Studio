<!DOCTYPE html>
<html>

<head>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>
  <nav class="navbar navbar-expand-md navbar-light fix-top border-bottom">
    <div class="container-xxl">
      <a class="navbar-brand">
        <span class="fw-bold text-success">
          Cyber Studio
        </span>
      </a>
      <a href="/create" id="btn_create_story" class="btn btn-success">Create Story</a>
    </div>
  </nav>

  <section>
    <div class="container">
      <div class="row my-3">
        <% if(stories.length > 0){ %>
          <% stories.forEach(story=> { %>
            <div class="card m-1 col-sm-8 col-lg-5">
              <img src="/images/landmark01.jpeg" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title"><%= story.author %></h5>
                <p class="card-text"><%= story.content %></p>
                <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
              </div>
            </div>
            <% }) %>
              <% }else { %>
                <p>no story to show</p>
              <% } %>
      </div>
    </div>
  </section>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>

   <script src="/javascripts/index.js"></script>
</body>

</html>