<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script src="/javascripts/indexedDB/messageDB.js" type="module"></script>
  <script src="/javascripts/indexedDB/storyDB.js" type="module"></script>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  <title>Store Detail</title>
</head>

<body>
  <nav class="navbar navbar-light navbar-expand-md border-bottom bg-light">
    <div class="container-fluid">
      <a class="navbar-brand">
        <span class="fw-bold text-dark">
          Cyber Studio
        </span>
      </a>
      <a href="/create" id="btn_create_story" class="btn btn-dark">Create Story</a>
    </div>
  </nav>

  <div class="container">
    <div style="width: 100%; height: 50vh">
      <img id="image" height="100%">
      <canvas id="canvas"></canvas>
    </div>
  </div>

  <div class="container">
    <div class="card col">
      <h2 class="card-title text-center">
        <a href="/" class="btn btn-warning">Back</a>
        <a id="canvas-clear" class="btn btn-success">Clear Canvas</a>
      </h2>
      <div class="card-body">
      </div>
    </div>
  </div>
  <div class="container">
    <div class="card">
      <div class="card-body" style="height: 500px; overflow: auto;">
        <ul id="message-list" class="list-group">
        </ul>
      </div>
      <div class="card-footer bg-white">
        <div class="row m-3">
          <div class="col-10">
            <input type="text" class="form-control border-0 border-bottom" id="comment"
              placeholder="Write a message...">
          </div>
          <div class="col-2">
            <button id="send_msg" type="submit" class="btn btn-primary">Send Message</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="/javascripts/story-detail.js"></script>
  <script src="/javascripts/canvas.js"></script>
</body>

</html>