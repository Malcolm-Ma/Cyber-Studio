{
  "openapi": "3.0.2",
  "info": {
    "version": "2.0.0",
    "title": "Cyber Studio",
    "description": "Story sharing and discussing",
    "termsOfService": "http://api_url/terms/",
    "contact": {
      "name": "Team",
      "email": "tchen64@sheffield.ac.uk",
      "url": "http://shef.ac.uk"
    },
    "license": {
      "name": "Apache 2.0",
